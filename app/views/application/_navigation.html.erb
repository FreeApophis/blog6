<input type="checkbox" id="hamburg">
<label for="hamburg" class="hamburg">
  <span class="line"></span>
  <span class="line"></span>
  <span class="line"></span>
</label>
<ul>
<% MenuItem.all.each do |menu_item| %>
  <% if menu_item.name == 'login_logout' %>
    <% if session[:wgid] %>
      <li><%= link_to 'An- und abmelden', rsvp_update_path %></li>
      <li><%= link_to 'Ausloggen', rsvp_logout_path %></li>
    <% else %>
      <li><%= link_to 'An- und abmelden', rsvp_login_path %></li>
    <% end %>
  <% else %>
    <li><%= link_to menu_item.name, menu_item.path %></li>
  <% end %>
<% end %>
</ul>
